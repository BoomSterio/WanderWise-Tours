extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create account
      form#signup-form.form
        .form__group
          label.form__label(for='name') Your name
          input#name.form__input(placeholder='First and last name', required, autocomplete='name')
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required, autocomplete='email')
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='At least 8 characters', required, minlength='8', autocomplete='current-password')
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Re-enter password
          input#passwordConfirm.form__input(type='password', required, minlength='8', autocomplete='current-password')
        .form__group
          button.btn.btn--green Sign up