{
  "name": "natours",
  "version": "1.0.0",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.9.0"
  },
  "description": "Booking web application",
  "main": "app.js",
  "targets": {
    "main": false
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "start": "nodemon server.js",
    "start:prod": "set NODE_ENV=production&& nodemon server.js",
    "delete-data": "set NODE_ENV=LOADER&& node ./dev-data/data/import-dev-data.js --delete",
    "import-data": "set NODE_ENV=LOADER&& node ./dev-data/data/import-dev-data.js --import",
    "test": "jest",
    "debug": "ndb server.js",
    "watch:js": "parcel watch ./public/js/index.js --dist-dir ./public/js/bundle",
    "build:js": "parcel build ./public/js/index.js --dist-dir ./public/js/bundle"
  },
  "author": "Maksym Sh",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.36.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^5.13.20",
    "morgan": "^1.10.0",
    "multer": "*",
    "nodemailer": "^6.9.7",
    "nodemailer-brevo-transport": "^2.1.0",
    "pug": "^3.0.2",
    "regenerator-runtime": "^0.13.11",
    "sharp": "^0.33.2",
    "slugify": "^1.6.6",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "buffer": "^6.0.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.7.0",
    "ndb": "^1.1.5",
    "nodemon": "^3.0.1",
    "parcel": "^2.11.0",
    "prettier": "^3.0.0"
  }
}
